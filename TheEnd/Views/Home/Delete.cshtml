@model TheEnd.Models.Course
@{
    ViewBag.Title = "Удаление курса";
}

<div>
    <h4>Вы уверены, что хотите удалить курс?</h4>
    <h2>Курс: "@Model.Name"</h2>
    <div>
        <div class="col-lg-4">
            <img class="img-thumbnail" src="@Model.Img" alt="@Model.Name" />
        </div>
    </div>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>