@model TheEnd.Models.Course
@{
    ViewBag.Title = Model.Name;
}
<h2>Пользователь @Model.Name</h2>
<div>
    <div class="col-lg-4">
        <img class="img-thumbnail" src="@Model.Img" alt="@Model.Name" />
        <h2>@Model.Name</h2>
        <p>@Model.ShortDesc</p>
        <p>Цена: @Model.Price.ToString("c")</p>
        <p>@Model.LongDesc</p>
        <p><a asp-action="Details" asp-controller="Home" asp-route-id="@Model.id">Подробнее</a> |</p>
    </div>
</div>